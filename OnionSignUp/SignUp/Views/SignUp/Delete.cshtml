@model Domain.Entities.User

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>User Details</h4>
    <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>@Model.Username</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>
    </dl>

    @using (Html.BeginForm("Delete", "SignUp", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "AllUsers", null, new { @class = "btn btn-default" })
    }
</div>
